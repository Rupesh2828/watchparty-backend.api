{
  "compilerOptions": {
    "rootDirs": ["src" ,"custom-types.d.ts"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}